@model IEnumerable<Scopo.HMS.Models.Patient>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>



<div class="row mt-md-4 mb-md-2">

    <a class="col-md-2 btn btn-primary" asp-action="Create">Create New Patient</a>
    <a class="col-md-2 btn btn-primary " style="margin-left:8px;" asp-action="CreatePatientLog">Enter Patient Log</a>
</div>







<div class="row">
    <table class="table table-bordered">
        <thead class="text-center">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mobile)
                </th>
                <th>
                    Emergency Contact
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    Patient Code
                </th>
                <th style="color:grey;">Actions</th>

            </tr>
        </thead>
        <tbody class="text-md-center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmergencyContact)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PatientCode)
                    </td>

                    <td>
                        <a  data-bs-toggle="tooltip" data-bs-placement="top" title="Edit" style="text-decoration:none;" asp-action="Edit" asp-route-id="@item.PatientID"><span><i style="color:grey;" class="far fa-edit"></i></span></a> |
                        <a  data-bs-toggle="tooltip" data-bs-placement="top" title="Details" style="text-decoration:none;margin-left:5px;" asp-action="Details" asp-route-id="@item.PatientID"><span><i  style="color:grey;" class="fas fa-info"></i> </span></a> |
                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="Delete" style="text-decoration:none;margin-left:5px;" asp-action="Delete" asp-route-id="@item.PatientID"><span><i style="color:grey;" class="far fa-trash-alt"></i> </span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>






