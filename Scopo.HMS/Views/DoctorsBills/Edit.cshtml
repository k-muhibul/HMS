@model Scopo.HMS.Models.DoctorsBill

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DoctorsBill</h4>
<hr />


<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" id="exampleModal" onload="myfunction()" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-toggle="modal">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Doctor Bill</h5>
                <a href="/DoctorsBills/Index" class="btn btn-secondary btn-close"></a>
            </div>
            <div class="modal-body">


                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="DoctorsBillID" />
                            <div class="form-group">
                               
                              @Html.HiddenFor(Model=>Model.AdmissionID)
                                <span asp-validation-for="AdmissionID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="VisitDate" class="control-label"></label>
                                <input asp-for="VisitDate" class="form-control" />
                                <span asp-validation-for="VisitDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                               
                                <input type="hidden" asp-for="Amount" class="form-control" />
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                            <div class="modal-footer">
                                <a href="/DoctorsBills/Index" class="btn btn-secondary">Close</a>
                                <input type="submit" value="Edit" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

               
            </div>

        </div>
    </div>
</div>

<button style="display:none" id="linkid" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="mdo">Open modal</button>
<script>
    window.onload = function () {
        document.getElementById("linkid").click();
    };
    var exampleModal = document.getElementById('exampleModal')
    console.log("Onload");

    function myfunction() {
        var modalTitle = exampleModal.querySelector('.modal-title')
        var modalBodyInput = exampleModal.querySelector('.modal-body input')

        modalTitle.textContent = 'New message to ' + recipient
        modalBodyInput.value = recipient
    }


</script>














<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
