@model IEnumerable<Scopo.HMS.ViewModels.InvestigationBillViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<div class="row mt-md-4 mb-md-2">

    <a class="col-md-2 btn btn-primary" style="font-size:14px;" asp-action="Create">Create New Investigation Bill</a>

</div>
<div class="row">
    <table class="table table-bordered">
        <thead class="text-md-center">
            <tr>
                <th>
                    Patient Name
                </th>
                <th>
                    Patient Code
                </th>
                <th>
                    Room
                </th>
                <th>
                    Test Name
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Date
                </th>
                
                <th style="color:grey;">Actions</th>
            </tr>
        </thead>
        <tbody class="text-md-center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PtientName)
                    </td><td>
                        @Html.DisplayFor(modelItem => item.PatientCode)
                    </td><td>
                        @Html.DisplayFor(modelItem => item.Room)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LabTestName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvestigationDate)
                    </td>
                    <td>
                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="Delete" style="text-decoration:none;margin-left:5px;" asp-action="Delete" asp-route-id="@item.InvestigationID"><span><i style="color:grey;" class="far fa-trash-alt"></i> </span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>